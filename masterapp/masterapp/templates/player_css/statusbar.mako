.status {
    background-color: ${c.profile.top_bg};
    font-weight: bold;
    color: ${c.profile.status_txt};
    text-align: center;
    height: 100%;
    padding-top: 4px;
}

.cstatus {
    position: absolute;
    right: 3pt;
}

a.logout {
    color: ${c.profile.status_txt};
    text-decoration: none;
}

a:hover.logout{
    color: ${c.profile.click};
    text-decoration: underline;
}
